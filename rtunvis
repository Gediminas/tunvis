#!/usr/bin/env bash

PID=0

destroy() {
    kill $PID
    killall tunvis

    ip rule del fwmark 42 table TUNVIS


    iptables -t nat -D POSTROUTING -o tun11 -j SNAT --to-source 192.168.101.137
    iptables -t mangle -D OUTPUT -j MARK --set-mark 2
    iptables -t mangle -D PREROUTING -i tun12 -j MARK --set-mark 0/2
    iptables -t mangle -D PREROUTING -i enp0s3 -j MARK --set-mark 1

    ip route del table TUN_IN default via 10.77.12.12
    ip route del table TUN_OUT default via 192.168.101.1

    ip rule del fwmark 2 table TUN_OUT
    ip rule del fwmark 1 table TUN_IN

}

trap ctrl_c INT
ctrl_c() {
    echo "** Trapped CTRL-C"
    destroy
    exit
}

killall tunvis

while true; do
  ./tunvis &
  PID=$!
  inotifywait ./tunvis
  destroy
  sleep 2
done
